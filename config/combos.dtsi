// use global-quick-tap-ms for combos (requires PR 1387)
#undef COMBO_HOOK
#define COMBO_HOOK global-quick-tap-ms = <150>;

#define COMBO_TERM_FAST 20
#define COMBO_TERM_SLOW 35

/* Horizontal combos - left hand */
ZMK_COMBO(bslh,  &kp NUBS,        LT0 LT1,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(lpar,  &lpar_lt,        LM0 LM1,     DEF     NUM, COMBO_TERM_SLOW)
ZMK_COMBO(lt,    &kp LT,          LM0 LM1,         NAV    , COMBO_TERM_SLOW)
ZMK_COMBO(lbkt,  &kp LBKT,        LB0 LB1,     DEF     NUM, COMBO_TERM_SLOW)
ZMK_COMBO(lbrc,  &kp LBRC,        LB0 LB1,         NAV    , COMBO_TERM_SLOW)

/* Horizontal combos - right hand */
ZMK_COMBO(fslh,  &kp FSLH,        RT0 RT1,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(rpar,  &rpar_gt,        RM0 RM1,     DEF     NUM, COMBO_TERM_SLOW)
ZMK_COMBO(gt,    &kp GT,          RM0 RM1,         NAV    , COMBO_TERM_SLOW)
ZMK_COMBO(rbkt,  &kp RBKT,        RB0 RB1,     DEF     NUM, COMBO_TERM_SLOW)
ZMK_COMBO(rbrc,  &kp RBRC,        RB0 RB1,         NAV    , COMBO_TERM_SLOW)

/* Vertical combos - left hand */
ZMK_COMBO(paste, &kp LS(INS),     LT0 LM0,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(copy,  &kp LC(INS),     LB0 LM0,     DEF     NUM, COMBO_TERM_SLOW)
ZMK_COMBO(cut,   &kp LC(X),       LB0 LM0,         NAV    , COMBO_TERM_SLOW)

ZMK_COMBO(at,    &kp LS(SQT),     LT1 LM1,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(hash,  &kp NON_US_HASH, LB1 LM1,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(dllr,  &dllr_pound,     LT2 LM2,     DEF     NUM, COMBO_TERM_SLOW)
ZMK_COMBO(pound, &kp POUND,       LT2 LM2,         NAV    , COMBO_TERM_SLOW)
ZMK_COMBO(equal, &kp EQUAL,       LB2 LM2,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(amps,  &kp PIPE,        LT3 LM3,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(pipe,  &kp PIPE2,       LB3 LM3,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(grave, &kp GRAVE,       LT4 LM4,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(tilde, &kp TILDE2,      LB4 LM4,     DEF NAV NUM, COMBO_TERM_SLOW)

/* Vertical combos - right hand */
ZMK_COMBO(redo,  &kp K_REDO,      RT0 RM0,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(undo,  &kp K_UNDO,      RB0 RM0,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(star,  &star_c,         RT1 RM1,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(under, &kp UNDER,       RB1 RM1,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(plus,  &kp PLUS,        RT2 RM2,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(minus, &kp MINUS,       RB2 RM2,     DEF NAV NUM, COMBO_TERM_SLOW)

ZMK_COMBO(caret, &kp CARET,       RT3 RM3,     DEF NAV NUM, COMBO_TERM_SLOW)
ZMK_COMBO(prcnt, &kp PRCNT,       RB3 RM3,     DEF NAV NUM, COMBO_TERM_SLOW)